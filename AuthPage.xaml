<Page x:Class="BankApp.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AuthPage">
	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
		<TextBlock Text="Логин" Margin="0,0,0,5"/>
		<TextBox x:Name="LoginTextBox" Margin="0,0,0,10"/>

		<TextBlock Text="Пароль" Margin="0,0,0,5"/>
		<PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>

		<Button x:Name="LoginButton" Content="Войти" Click="LoginButton_Click" Margin="0,0,0,10"/>
		<Button x:Name="RegisterButton" Content="Регистрация" Click="RegisterButton_Click"/>
	</StackPanel>
</Page>